<?xml version="1.0" encoding="utf-8"?>
			
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/statfind"
			android:background="@color/darkgrey"
    		android:orientation="vertical"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center_horizontal">
			<TextView 
				android:id="@+id/findtextview"
				android:text="Find Your NPR Station"
				android:gravity="center_horizontal"
				android:textColor="@color/white"
				android:layout_width="fill_parent"
    			android:layout_height="wrap_content" />

			<LinearLayout 
				android:id="@+id/header"
    			android:orientation="vertical"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:gravity="center_horizontal">

    			<ImageView
    				android:id="@+id/npr2"
    				android:src="@drawable/npr2"
    				android:gravity="center_vertical"
    				android:layout_width="wrap_content"
    				android:layout_height="wrap_content"/>
    				<RelativeLayout  
						android:orientation="vertical"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
    					<TextView  
							android:id="@+id/banner"
							android:text=""
							android:gravity="center_vertical"
							android:background="@drawable/updatebannerblue"
							android:textColor="@color/white"
							android:layout_width="fill_parent"
    						android:layout_height="wrap_content" />
    					<ImageView
    						android:id="@+id/stationprocess"
    						android:src="@drawable/processing2"
    						android:layout_alignRight="@id/banner"
    						android:layout_width="wrap_content"
    						android:layout_height="wrap_content"/>
					</RelativeLayout>
    				<EditText
    					android:id="@+id/stationsearchbox"
    					android:layout_width="fill_parent"
    					android:layout_height="wrap_content"
    					android:hint="Please type ZIP Code or City, State"/>
    			</LinearLayout>
    			<ImageView
    					android:id="@+id/stationsearchbutton"
    					android:src="@drawable/search"
    					android:gravity="center"
    					android:layout_width="wrap_content"
    					android:layout_height="wrap_content"/>
    			
				<ListView
					android:id="@+id/lvstatfind"
    				android:layout_width="fill_parent"
    				android:layout_height="fill_parent" />
		</LinearLayout>
		